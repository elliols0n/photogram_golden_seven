<h1>Edit Photo <%= @pic.id %></h1>

<form action="/update_photo/<%= @pic.id %>">
  <div>
    <label for="source_input">
      <strong>Image URL</strong>
    </label>
    <textarea id="source_input" type="text" name="source_input"><%= @pic.source %></textarea>
    <input id="source_input" type="text" name="the_source">

  </div>

  <div>
    <label for="caption_input">
      <strong>Caption</strong>
    </label>
    <textarea id="caption_input" type="text" name="caption_input"><%= @pic.caption %></textarea>
    <input id="caption_input" type="text" name="the_caption">
  </div>

  <button>
    Update Photo
  </button>
</form>